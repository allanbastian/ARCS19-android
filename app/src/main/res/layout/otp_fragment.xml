<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/arcs_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/arcs"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RCS"
                    android:textStyle="bold"
                    android:layout_marginStart="90dp"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:layout_alignBottom="@id/arcs_logo"
                    android:layout_marginBottom="20dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/alert_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Email ID to continue"
                android:textColor="@color/primary_light"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_login"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:id="@+id/email_id"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:drawablePadding="10dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:hint="EMAIL"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/primary_light"
                android:inputType="textEmailAddress"/>


            <LinearLayout
                android:id="@+id/otp_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center">

                <EditText
                    android:id="@+id/digit1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:background="@drawable/otp_box"/>

                <EditText
                    android:id="@+id/digit2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:background="@drawable/otp_box"/>

                <EditText

                    android:id="@+id/digit3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:background="@drawable/otp_box"/>

                <EditText
                    android:id="@+id/digit4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:background="@drawable/otp_box"/>

            </LinearLayout>



            <Button
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:background="@drawable/orange_button_curve"/>


        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>