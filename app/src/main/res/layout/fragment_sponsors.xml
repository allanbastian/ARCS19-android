<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sponsors_title"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPONSORS"
        android:textAlignment="center"
        android:fontFamily="@font/montserratregular"
        android:textColor="@color/orange"
        android:layout_gravity="center"
        android:textSize="35sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/sponsors_fragment_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:indeterminateTint="@color/orange"
            android:layout_gravity="center"/>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/sponsors_item_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_sponsor_button"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_left_white_64dp" />

        <Space
            android:layout_width="120dp"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/next_sponsor_button"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_right_white_64dp" />


    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

</LinearLayout>