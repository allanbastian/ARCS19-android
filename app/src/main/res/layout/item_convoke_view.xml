<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/convoke_root_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_centerInParent="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="300dp"
    android:layout_height="380dp"
    app:cardBackgroundColor="@color/orange"
    android:layout_gravity="center"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/convoke_item_progressbar"
            android:layout_width="36dp"
            android:layout_height="212dp"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="@color/secondary_dark"/>

        <android.support.v7.widget.CardView
            android:id="@+id/convoke_image_cardview"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="90dp"
            android:elevation="24dp">

            <ImageView
                android:id="@+id/convoke_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/convoke_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:autoSizeTextType ="uniform"
            android:maxLines="2"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="25sp"
            android:textColor="@color/secondary_dark"
            tools:text="Trisha Samson is so awesome" />

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:id="@+id/convoke_topic"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:text="Germany"
            android:textColor="@color/white"/>
        <!--<Button
            android:id="@+id/convoke_follow_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_margin="12dp"
            android:layout_height="32dp"
            android:text="Follow"
            android:background="@drawable/convoke_follow_button_layout"
            android:drawableLeft="@drawable/ic_add_black_8dp"/>-->

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/convoke_follow_bar"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_margin="16dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/developer_facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/linkedin_vector"/>


    </LinearLayout>

</RelativeLayout>




</android.support.v7.widget.CardView>