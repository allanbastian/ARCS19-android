<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/developer_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    app:cardBackgroundColor="@color/white_with_alpha"
    android:layout_gravity="center"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/convoke_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:siRadius="24dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/convoke_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="Trisha Samson" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/developer_country"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:text="Germany"
                    android:textColor="@color/colorPrimary"/>

                <Button
                    android:id="@+id/convoke_follow_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_margin="12dp"
                    android:layout_height="32dp"
                    android:text="Follow"
                    android:background="@drawable/convoke_follow_button_layout"
                    android:drawableLeft="@drawable/ic_add_black_8dp"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="4dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true">

            <CheckBox
                android:id="@+id/developer_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bookmark_selector"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/developer_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook_vector"/>


            <!--<ImageView
                android:id="@+id/developer_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter_vector"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/developer_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram_vector" />-->



        </LinearLayout>

    </RelativeLayout>





</android.support.v7.widget.CardView>