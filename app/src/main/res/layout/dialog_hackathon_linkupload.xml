<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJECT LINK UPLOAD"
                android:textColor="@color/orange"
                android:gravity="center"
                android:textAllCaps="true"
                android:autoSizeTextType="uniform"
                android:maxLines="2"
                android:fontFamily="@font/montserratregular"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:id="@+id/linkupload_dialog"/>

            <LinearLayout
                android:id="@+id/hackathon_project_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/hackathon_gitlink_display"
                    android:maxLines="1"
                    android:inputType="text"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginEnd="8dp"
                    android:hint="GitHub Link"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/white_with_alpha"
                    android:textColorHint="@color/orange"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/gitlink_enter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_forward_white_24dp"
                    android:background="@drawable/primary_color"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>